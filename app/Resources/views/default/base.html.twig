<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html" charset=utf-8"/>
    <title>
        {% block title %}
            Catalogue
        {% endblock %}
    </title>
    {% block javascripts %}
        {% javascripts '@AntonShopBundle/Resources/public/js/jquery-3.1.1.js'
        '@AntonShopBundle/Resources/public/js/bootstrap.min.js'
        '@AntonShopBundle/Resources/public/js/*' %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}
    {% block stylesheets %}
        {% stylesheets 'bundles/antonshop/css/*' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
        {% endstylesheets %}
    {% endblock %}
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>

<section id="wrapper">
    <header id="header">
        <div class="top">
            {% block navigation %}
                <nav>
                    <ul class="navigation">
                        <li>
                            <a href="{{ path('securityLogin') }}">
                                Login
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('signUp') }}">
                                Sign up
                            </a>
                        </li>
                    </ul>
                </nav>
            {% endblock %}
        </div>
        <hgroup>
            <h2>
                {% block blog_title %}
                    <a href="{{ path('homepage') }}">
                        {% block blog_title_text %}
                            Welcome
                        {% endblock %}
                    </a>
                {% endblock %}
            </h2>
        </hgroup>
    </header>

    <section class="main-col">
        {% block body %}
        {% endblock %}
    </section>
    {% block sidebar %}
        <div id="mySidebar" class="sidebar">
            {% block sidebarText %}
            {% endblock %}
        </div>
    {% endblock %}
</section>

<div id="footer">
</div>

</body>
</html>
