{% extends 'default/layout.html.twig' %}
{% block sidebar %}
{% endblock %}

{% block blog_title_text %}
    Recovery password
{% endblock %}

{% block body %}
    {% if app.session.flashBag.has('success') %}
        <div class="alert alert-success">
            {% for flashMessage in app.session.flashBag.get('success') %}
                {{ flashMessage }}
            {% endfor %}
        </div>
    {% endif %}
    {% if app.session.flashBag.has('error') %}
        <div class="alert alert-danger">
            {% for flashMessage in app.session.flashBag.get('error') %}
                {{ flashMessage }}
            {% endfor %}
        </div>
    {% endif %}
    <header>
        <p class="text-left">Enter your email address and we'll help you reset your password.</p>
    </header>

    <form name="user" action="{{ path('recoveryPassword') }}" method="post" class="form-horizontal userLogin">
        <hr class="colorgraph">
        <div id="user">
            <div class="form-group">
                <label class="col-sm-2 control-label required" for="email">Email</label>
                <div class="col-sm-10">
                    <input type="email" id="email" name="_email" required="required"
                           class="form-control" autocomplete="off">
                </div>
            </div>
        </div>
        <hr class="colorgraph">
        <div class="row">
            <div class="col-xs-12 col-md-6">
                <input type="submit" value="Send" class="btn btn-success btn-block btn-lg" tabindex="7"
                       autocomplete="off">
            </div>
        </div>
    </form>
{% endblock %}
