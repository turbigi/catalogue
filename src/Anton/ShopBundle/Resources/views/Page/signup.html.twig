{% extends 'AntonShopBundle::layout.html.twig' %}

{% block title %}Sign up{% endblock %}

{% block body %}
    <header>
        <h1>Sign up</h1>
    </header>

    {{ form_start(form, { 'attr': {'class': 'anton'} }) }}
    {{ form_errors(form) }}
    {{ form_row(form.username) }}
    {{ form_row(form.email) }}
    {{ form_row(form.plainPassword) }}
    {{ form_widget(form) }}
    <input type="submit" value="Register"/>
    {{ form_end(form) }}
{% endblock %}